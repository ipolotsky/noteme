# ============================================================
# Noteme Bot â€” Environment Variables
# ============================================================
# Copy this file to .env and fill in all values.
# Required variables are marked with [REQUIRED].
# Optional variables have sensible defaults.
# ============================================================

# --- Telegram Bot ---
NOTEME_BOT_TOKEN=              # [REQUIRED] Telegram Bot API token from @BotFather
NOTEME_BOT_USERNAME=           # [REQUIRED] Bot username without @ (e.g. noteme_bot)

# --- Database (PostgreSQL) ---
NOTEME_DB_HOST=localhost
NOTEME_DB_PORT=5433            # Dev: 5433 (non-standard to avoid conflicts)
NOTEME_DB_NAME=noteme
NOTEME_DB_USER=noteme
NOTEME_DB_PASSWORD=            # [REQUIRED] PostgreSQL password
# Full DSN is built automatically: postgresql+asyncpg://user:pass@host:port/db

# --- Redis ---
NOTEME_REDIS_HOST=localhost
NOTEME_REDIS_PORT=6380         # Dev: 6380 (non-standard to avoid conflicts)
NOTEME_REDIS_DB=0
# NOTEME_REDIS_PASSWORD=       # Optional: Redis password (if configured)

# --- OpenAI API ---
NOTEME_OPENAI_API_KEY=         # [REQUIRED] OpenAI API key (for gpt-4o-mini + Whisper)
NOTEME_OPENAI_MODEL=gpt-4o-mini
NOTEME_OPENAI_WHISPER_MODEL=whisper-1

# --- Admin Panel ---
NOTEME_ADMIN_USERNAME=         # [REQUIRED] Admin panel login username
NOTEME_ADMIN_PASSWORD=         # [REQUIRED] Admin panel login password
NOTEME_ADMIN_SECRET_KEY=       # [REQUIRED] Secret key for session signing (generate: python -c "import secrets; print(secrets.token_hex(32))")

# --- Sentry ---
NOTEME_SENTRY_DSN=             # [REQUIRED for prod] Sentry DSN for error tracking (https://sentry.io)
NOTEME_SENTRY_ENVIRONMENT=development  # development | staging | production

# --- App Settings ---
NOTEME_APP_HOST=0.0.0.0
NOTEME_APP_PORT=8000           # Container internal port (mapped to 8001 in dev)
NOTEME_APP_DEBUG=true          # Set to false in production
NOTEME_APP_BASE_URL=           # [REQUIRED for prod] Public URL for sharing pages (e.g. https://noteme.example.com)
NOTEME_BACKUP_DOMAIN=          # [REQUIRED for prod] Domain for Databasus backup panel (e.g. backup.noteme.example.com)

# --- Default User Limits (future monetization) ---
NOTEME_DEFAULT_MAX_EVENTS=10
NOTEME_DEFAULT_MAX_NOTES=10
NOTEME_DEFAULT_MAX_TAGS_PER_ENTITY=3

# --- AI Rate Limits ---
NOTEME_AI_RATE_LIMIT_PER_MINUTE=30
NOTEME_AI_RATE_LIMIT_PER_HOUR=200

# --- Notifications ---
NOTEME_DEFAULT_NOTIFICATION_TIME=09:00  # Default morning notification time (HH:MM)
NOTEME_DEFAULT_NOTIFICATION_COUNT=3     # Number of beautiful dates in digest

# --- Logging ---
NOTEME_LOG_LEVEL=INFO          # DEBUG | INFO | WARNING | ERROR
NOTEME_LOG_FORMAT=json         # json | text (json for production, text for dev)
